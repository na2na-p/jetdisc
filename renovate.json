{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "group:definitelyTyped",
    "group:nodeJs"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "addLabels": ["major update"]
    },
    {
      "groupName": "JetDisc updates",
      "datasources": ["docker"],
      "packageNames": ["na2na/jetdisc"],
      "matchManagers": ["helm-values"],
      "addLabels": ["Infra"]
    }
  ]
}
