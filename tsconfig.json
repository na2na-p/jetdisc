{
	"extends": "@tsconfig/strictest",
	"compilerOptions": {
		"incremental": false,
		"target": "ESNext",
		"module": "NodeNext",
		"rootDir": "src",
		"typeRoots": [
			"src/@types",
			"node_modules/@types"
		],
		"baseUrl": ".",
		"outDir": "./dist",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@modules/*": [
				"src/modules/*"
			],
			"@config/*": [
				".config/*"
			],
			"@utils/*": [
				"src/utils/*"
			]
		}
	},
	"include": [
		"./src/**/*.ts"
	]
}
