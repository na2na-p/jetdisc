{
	"extends": "@tsconfig/strictest",
	"compilerOptions": {
		"lib": [
			"ESNext"
		],
		"incremental": false,
		"target": "ESNext",
		"module": "NodeNext",
		"rootDir": ".",
		"typeRoots": [
			"src/@types",
			"node_modules/@types"
		],
		"baseUrl": ".",
		"outDir": "./dist",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@modules/*": [
				"src/modules/*"
			],
			"@config/*": [
				".config/*"
			],
			"@utils/*": [
				"src/utils/*"
			]
		},
	},
	"include": [
		"src",
		"node_modules/vitest/globals.d.ts",
		"vite.config.ts"
	],
}
